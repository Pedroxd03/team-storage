import cv2
import numpy as np

def detectar_brillo():
    # Iniciar la c√°mara
    cap = cv2.VideoCapture(0)  
    ret, frame = cap.read()  # Capturar un frame
    cap.release()  # Liberar la c√°mara

    if not ret:
        print("‚ùå Error al acceder a la c√°mara.")
        return
    
    # Convertir la imagen a escala de grises
    gray = cv2.cvtColor(frame, cv2.COLOR_BGR2GRAY)
    
    # Calcular brillo promedio
    brillo = np.mean(gray)
    
    # Decidir modo
    if brillo < 100:
        print("üåô Modo oscuro recomendado")
    else:
        print("‚òÄÔ∏è Sigue con el modo claro")
    
    # Mostrar la imagen
    cv2.imshow("Imagen capturada", frame)
    cv2.waitKey(3000)  # Mostrar por 3 segundos
    cv2.destroyAllWindows()

detectar_brillo()
